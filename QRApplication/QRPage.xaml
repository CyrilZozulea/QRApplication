<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QRApplication.QRPage"
             Title="QR-Code"
             BackgroundColor="Azure">
    <StackLayout>
        <Label
            x:Name="QRCodeBarcode"
            FontFamily="CCodeQR"
            TextColor="Black"
            FontSize="6"
            Margin="50"
            HorizontalOptions="Center"
            VerticalOptions="Center"/>

        <Label Text="Choose the QR-color"
               FontSize="18"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
        <!-- 1 -->
        <Label
            x:Name="rLabelValue"
            Text="R"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
        <Slider ValueChanged="RSliderValue"
                Margin="20,0,20,0" />
        <!-- 2 -->
        <Label
            x:Name="gLabelValue"
            Text="G"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
        <Slider ValueChanged="GSliderValue"
                Margin="20,0,20,0" />
        <!-- 3 -->
        <Label
            x:Name="bLabelValue"
            Text="B"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
        <Slider ValueChanged="BSliderValue"
                Margin="20,0,20,0" />
    </StackLayout>
</ContentPage>
